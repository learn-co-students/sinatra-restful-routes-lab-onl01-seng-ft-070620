<form action="/recipes/<%= @recipe.id %>" method="post">
<input type="hidden" id="hidden" name="_method" value="patch">
    <p><label for="name">Recipe Name:</label>
    <input id="name" type="text" name="recipe[name]" value="<%= @recipe.name %>"></p>

    <p><label for="ingredients">What ingredients are needed?</label>
    <input id="ingredients" type="text" name="recipe[ingredients]" value="<%= @recipe.ingredients %>"></p>

    <p><label for="cook_time">What is the cook time?</label>
    <input id="cook_time" type="text" name="recipe[cook_time]" value="<%= @recipe.cook_time %>"></p>
    
    <input type="submit" value="submit">
</form>