<h1>Recipes</h1>

<% @recipes.each do |r| %>

    <h3><a href= '/recipes/<%= r.id %>'><%= r.name %></a></h3>
    <ul>
        <li>Ingredients:
            <ul>
                <li><%= r.ingredients %></li>
            </ul>
        </li>
        <li>Cook time: <%= r.cook_time %></li>
    </ul>
    <br>

<% end %>