<h1>Edit Recipe For <%= @recipe.name %></h1>

<div class="recipe_form">
    <form action="/recipes/<%= @recipe.id %>" method="post">
        <input type="hidden" name="_method" value="patch">
        <label for="name">Recipe Name: </label><input type="text" name="name" value="<%= @recipe.name %>"><br>
        <label for="ingredients">Recipe Ingredients: </label><input type="text" name="ingredients" value="<%= @recipe.ingredients %>"><br>
        <label for="cook_time">Cook Time: </label><input type="text" name="cook_time" value="<%= @recipe.cook_time %>"><br>
        <input type="submit" value="Submit">
    </form>
</div>