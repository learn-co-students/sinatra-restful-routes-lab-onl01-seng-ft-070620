<form action="/recipes" method="post">
    <p><label for="name">Recipe Name:</label>
    <input id="name" type="text" name="recipe[name]"></p>

    <p><label for="ingredients">What ingredients are needed?</label>
    <input id="ingredients" type="text" name="recipe[ingredients]"></p>

